# Example run command:
#
#     docker run \
#         --detach \
#         --dns=172.17.42.1 \
#         --env=KAFKA_BROKERS=kafka1.local.datafascia.com:9092 \
#         --publish=9520:9520 \
#         --volume=/var/dF:/var/dF \
#         datafascia/df-etl-hl7-ingest

FROM datafascia/centos7-ansible-java:latest
MAINTAINER devops@datafascia.com

COPY df-shell-{{ df_platform_version }}-bin.tar.gz {{ company_package_dir }}/df-shell-{{ df_platform_version }}-bin.tar.gz

# ADD instruction also extracts recognized archive formats.
ADD ansible.tar.gz {{ company_install_prefix }}

WORKDIR {{ company_ansible_dir }}
RUN ansible-playbook \
        --extra-vars="environment_name=local" \
        --inventory-file=environment/local/hosts \
        --tags=image \
        df-etl-hl7-ingest.yml

WORKDIR {{ company_install_prefix }}/df-platform/bin
RUN rm -rf {{ company_ansible_dir }} {{ company_package_dir }} && \
    yum clean all

ENV PATH {{ company_install_prefix }}/df-platform/bin:$PATH
EXPOSE 9520

CMD ["{{ company_install_prefix }}/df-platform/run.sh"]
