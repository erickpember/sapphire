package com.datafascia.etl.harm;

import ca.uhn.fhir.model.dstu2.resource.Encounter;
import ca.uhn.fhir.model.dstu2.resource.Observation;
import com.datafascia.emerge.harms.iaw.MobilityScore;
import com.datafascia.etl.harm.HarmEvidenceUpdater.Event;
import com.datafascia.etl.harm.HarmEvidenceUpdater.EventType;

global com.datafascia.emerge.ucsf.HarmEvidence harmEvidence;
global com.datafascia.etl.harm.IntensiveCareUnitAcquiredWeaknessUpdater intensiveCareUnitAcquiredWeaknessUpdater;

rule "Update intensive care unit acquired weakness data"
when
  Event( type == EventType.UPDATE_OBSERVATIONS )
  $observation: Observation( MobilityScore.isRelevant($observation) )
  $encounter: Encounter()
then
  intensiveCareUnitAcquiredWeaknessUpdater.update(harmEvidence, $encounter);
end
