package com.datafascia.etl.harm;

import ca.uhn.fhir.model.dstu2.resource.Encounter;
import ca.uhn.fhir.model.dstu2.resource.Location;
import com.datafascia.domain.fhir.UnitedStatesPatient;
import com.datafascia.etl.harm.HarmEvidenceUpdater.Event;
import com.datafascia.etl.harm.HarmEvidenceUpdater.EventType;

global com.datafascia.emerge.ucsf.HarmEvidence harmEvidence;
global com.datafascia.etl.harm.DemographicDataUpdater demographicDataUpdater;

rule "Admit patient"
when
  Event( type == EventType.ADMIT_PATIENT )
  $patient: UnitedStatesPatient()
  $location: Location()
  $encounter: Encounter()
then
  demographicDataUpdater.update(harmEvidence, $patient, $location, $encounter);
end
