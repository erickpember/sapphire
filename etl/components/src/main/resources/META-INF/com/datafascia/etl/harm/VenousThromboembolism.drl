package com.datafascia.etl.harm;

import ca.uhn.fhir.model.dstu2.resource.Encounter;
import com.datafascia.etl.harm.HarmEvidenceUpdater.Event;
import com.datafascia.etl.harm.HarmEvidenceUpdater.EventType;

global com.datafascia.emerge.ucsf.HarmEvidence harmEvidence;
global com.datafascia.etl.harm.VenousThromboembolismUpdater venousThromboembolismUpdater;

rule "Update venous thromboembolism"
when
  Event( type == EventType.TIMER )
  $encounter: Encounter()
then
  venousThromboembolismUpdater.updateOnSystemicAnticoagulation(harmEvidence, $encounter);
  venousThromboembolismUpdater.updateScdsInUse(harmEvidence, $encounter);
end
